Algoritmo "Sucessor_AnteNumInteiro"

// Data atual  : 24/02/2017
Var
    sucessor, antecessor, Numero1: Inteiro


Inicio
    escreva ("Digite o número desejado;" )
    leia (Numero1)
    sucessor <- (Numero1 + 1)
    antecessor <- (Numero1 - 1)
    escreva (" O sucessor do número " ,Numero1, " é " ,Sucessor, " e seu antecessor é" ,Antecessor)


Fimalgoritmo